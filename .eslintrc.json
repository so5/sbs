{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "plugins": [
    "node"
  ],
  "rules": {
    "arrow-parens": [
      "error",
      "always"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-var": "error",
    "semi": [
      "error",
      "always"
    ],
    "node/no-unsupported-features": [
      "error",
      {
        "version": 8
      }
    ],
    "node/no-unpublished-require": "warn",
    "node/exports-style": [
      "error",
      "module.exports"
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
